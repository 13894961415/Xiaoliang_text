<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车型"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <com.example.xiaoliang_text.MyGridView
                    android:id="@+id/buy_more_type_gv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:gravity="center">
                </com.example.xiaoliang_text.MyGridView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_below="@+id/l1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车龄"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <com.example.xiaoliang_text.MyGridView
                    android:id="@+id/buy_more_age_gv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:gravity="center">
                </com.example.xiaoliang_text.MyGridView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_below="@+id/l2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="里程"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <com.example.xiaoliang_text.MyGridView
                    android:id="@+id/buy_more_km_gv"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:gravity="center">
                </com.example.xiaoliang_text.MyGridView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_below="@+id/l3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="变速箱"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <com.example.xiaoliang_text.MyGridView
                    android:id="@+id/buy_more_change_gv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:numColumns="3"
                    android:layout_gravity="center"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:gravity="center">
                </com.example.xiaoliang_text.MyGridView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_below="@+id/l4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="排量"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <com.example.xiaoliang_text.MyGridView
                    android:id="@+id/buy_more_pailiang_gv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:gravity="center">
                </com.example.xiaoliang_text.MyGridView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_below="@+id/l5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="排放标准"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <com.example.xiaoliang_text.MyGridView
                    android:id="@+id/buy_more_paifang_gv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:gravity="center">
                </com.example.xiaoliang_text.MyGridView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_below="@+id/l6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <com.example.xiaoliang_text.MyGridView
                    android:id="@+id/buy_more_color_gv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:gravity="center">
                </com.example.xiaoliang_text.MyGridView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/buy_more_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#c4c4c4"
            android:text="重置"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange"
            android:text="查看68条车源"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>

</RelativeLayout>