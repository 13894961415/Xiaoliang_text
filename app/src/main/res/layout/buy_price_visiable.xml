<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/buy_price_visi"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/but_tab"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="#fff">

            <com.example.xiaoliang_text.MyGridView
            android:id="@+id/buy_price_gv"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#fff"
            android:numColumns="3"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:gravity="center"
            android:layout_margin="20dp">
            </com.example.xiaoliang_text.MyGridView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_below="@+id/l1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义价格"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/buy_price_search_num_min"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/balck_kuang_back"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/buy_price_search_num_max"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/balck_kuang_back"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/buy_price_search_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/orange"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="确定" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/price_black_item"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/ll"
        android:layout_weight="1"
        android:background="#80000000">
    </TextView>

</RelativeLayout>